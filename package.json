{
  "name": "bm-api",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "cors": "^2.8.5",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.7.3",
    "morgan": "^1.10.0",
    "typescript": "^4.9.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-serve-static-core": "^4.17.31",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "cpx": "^1.5.0",
    "eslint": "^8.28.0",
    "lint-staged": "^13.0.4",
    "nodemon": "^2.0.16",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec ts-node src/index.ts",
    "start:debug": "yarn start:dev --inspect",
    "pre-build": "rimraf dist",
    "build": "tsc && cpx \"src/**\" dist",
    "test:run": "cross-env jest --config jest.json",
    "test:cov": "yarn test:run --collect-coverage && yarn test:open-cov",
    "test:cov-ci": "yarn test:run --coverage",
    "prettier": "prettier",
    "lint": "eslint --ext .ts,.tsx,!.d.ts src"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{tsx,.ts},!*.d.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
